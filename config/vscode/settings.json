{
  "workbench.colorTheme": "Ayu Dark",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.color": "#224249",
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.saturation": 0.3,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "HackGen35",
  "terminal.integrated.fontFamily": "HackGen35 Console NF",
  "editor.cursorBlinking": "solid", // [blink, smooth, solid, expand]  // カーソル の点滅
  // ブラケットペアを表示する
  "editor.guides.bracketPairs": false,
  // 配色のカスタマイズ
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#B48EAD",
    "editorBracketHighlight.foreground2": "#A3BE8C",
    "editorBracketHighlight.foreground3": "#EBCB8B",
    "editorBracketHighlight.foreground4": "#D08770",
    "editorBracketHighlight.foreground5": "#BF616A",
    "editorBracketHighlight.foreground6": "#abb2c0",
    "editorBracketHighlight.unexpectedBracket.foreground": "#db6165",
    "quickInput.background": "#0C0E13dd"
  },
  // emmetを有効にする言語
  "emmet.includeLanguages": {
    "php": "html",
    "erb": "html",
    "md": "html",
    "markdown": "html",
    "scss": "css",
    "javascript": "javascriptreact",
    "typescriptreact": "javascriptreact"
  },
  // 自動保存
  "files.autoSave": false,
  // 保存時のアクション
  "editor.codeActionsOnSave": {
    // "source.fixAll.prettier": true,
    "source.fixAll.eslint": true
  },
  // 自動保存
  "editor.formatOnSave": true,
  // 拡張機能のESlintのフォーマットを行う
  "eslint.format.enable": false,
  // 入力行をフォーマットする
  "editor.formatOnType": false,
  // ペースト時にフォーマットを行う
  "editor.formatOnPaste": false,
  // prettierをデフォルトのフォーマッタにする
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 言語ごとの設定
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "[makefile]": {
    // NOTE: Makefileはtab文字じゃないとエラーになる
    "editor.insertSpaces": false
  },
  // 引数名とか表示するやつ
  // "javascript.inlayHints.parameterNames.enabled": "all",
  // "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": false,
  // ========== Vim ==========
  // ノーマルモード
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-d>"],
      "after": ["g", "b"]
    }, // マルチカーソル,
    {
      "before": ["<C-n>"],
      "after": ["leader", "leader", "leader", "b", "d", "w"]
    }
  ],
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.leader": "\\",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.foldfix": true,

  // yankをクリップボードに
  "vim.useSystemClipboard": false,
  // 補完
  "editor.detectIndentation": false, // editor.tabSizeを開いてるファイルに合わせる
  "editor.quickSuggestions": {
    // 補完候補を出す場所
    "other": true,
    "strings": true,
    "comments": true
  }, // ペーストしたテキストをフォーマットする
  // インデントをスペースにする
  "editor.insertSpaces": true,
  // 閉じタグを自動で編集する
  "editor.linkedEditing": true,
  // 対応するカッコを強調する
  "editor.matchBrackets": "always",
  // ミニマップの表示
  "editor.minimap.enabled": false,
  // ファイルを削除するときに確認する
  "explorer.confirmDelete": false,
  // ファイルを移動するときに確認する
  "explorer.confirmDragAndDrop": false,
  // フォルダ階層をまとめる
  "explorer.compactFolders": false,
  // 末尾に改行を自動で入れる
  "files.insertFinalNewline": false,
  // 末尾の改行を削除する
  "files.trimFinalNewlines": true,
  // 末尾の空白を削除する
  "files.trimTrailingWhitespace": true,
  // ターミナルのカーソルの種類
  "terminal.integrated.cursorStyle": "line",
  // グリフマージンを表示する
  "editor.glyphMargin": false,
  // エディタのカーソル
  "editor.cursorStyle": "line",
  // 行数の表示
  "editor.lineNumbers": "off",
  // 文字の折り返し
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?",
  // タブサイズ
  "editor.tabSize": 2,
  // 対応してない拡張子の言語を指定
  "files.associations": {
    "*.gs": "javascript"
  },
  // サジェストのどの位置から選択するか。
  "editor.suggestSelection": "first",
  // ユーザースニペットを上に持ってくる
  "editor.snippetSuggestions": "top",
  // Tabでスニペットを挿入するかどうか
  "editor.tabCompletion": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoGuessEncoding": true,
  "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",
  "editor.inlineSuggest.enabled": true,
  "workbench.startupEditor": "none",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  // "workbench.editor.tabSizing": "shrink",
  "workbench.editor.titleScrollbarSizing": "large",
  // ファイルのプレビュー
  "workbench.editor.enablePreview": true,
  // ファイルのプレビュー
  "workbench.editor.enablePreviewFromQuickOpen": true,
  // memo: 将来デフォルトでtrueになる
  "git.mergeEditor": true,
  "git.ignoreRebaseWarning": true, // rebaseの警告を表示しない
  "editor.folding": false, // パスを表示する
  "window.title": "${activeEditorMedium}${separator}${activeEditorShort}",
  "notebook.lineNumbers": "on",
  "typescript.referencesCodeLens.enabled": true,
  "editor.stickyScroll.enabled": false,
  "terminal.integrated.smoothScrolling": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "editor.stickyScroll.maxLineCount": 5,
  "window.commandCenter": true,
  // "workbench.activityBar.visible": false
  "[c]": {
    "clang-format.executable": "/absolute/path/to/clang-format"
  },
  "breadcrumbs.enabled": false,
  "workbench.editor.showTabs": false,
  "redhat.telemetry.enabled": true,
  "console-ninja.featureSet": "Pro",
  "workbench.activityBar.visible": false
}
