{
  "workbench.colorTheme": "Ayu Dark Bordered",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.color": "#224249",
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.saturation": 0.3,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "HackGen35",
  "terminal.integrated.fontFamily": "HackGen35 Console NF",
  "editor.cursorBlinking": "solid", // [blink, smooth, solid, expand]  // カーソル の点滅
  // ブラケットペアを表示する
  "editor.guides.bracketPairs": false,
  // 配色のカスタマイズ
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#B48EAD",
    "editorBracketHighlight.foreground2": "#A3BE8C",
    "editorBracketHighlight.foreground3": "#EBCB8B",
    "editorBracketHighlight.foreground4": "#D08770",
    "editorBracketHighlight.foreground5": "#BF616A",
    "editorBracketHighlight.foreground6": "#abb2c0",
    "editorBracketHighlight.unexpectedBracket.foreground": "#db6165"
    // "titleBar.activeBackground": "#1E1E1E", // アクティブなタイトルバーの背景色
    // "titleBar.activeForeground": "#FFFFFF", // アクティブなタイトルバーの文字色
    // "titleBar.inactiveBackground": "#2D2D2D", // 非アクティブ時の背景色
    // "titleBar.inactiveForeground": "#BBBBBB" // 非アクティブ時の文字色
    // "quickInput.background": "#0C0E13dd"
  },
  // emmetを有効にする言語
  "emmet.includeLanguages": {
    "php": "html",
    "erb": "html",
    "md": "html",
    "markdown": "html",
    "scss": "css",
    "javascript": "javascriptreact",
    "typescriptreact": "javascriptreact"
  },
  // 保存時のアクション
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "never",
    "quickfix.biome": "never",
    "source.organizeImports.biome": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  // 拡張機能のESlintのフォーマットを行う
  "eslint.format.enable": false,
  // 入力行をフォーマットする
  "editor.formatOnType": false,
  // ペースト時にフォーマットを行う
  "editor.formatOnPaste": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": false,
  // ========== Vim ==========
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-n>"],
      "after": ["leader", "leader", "leader", "b", "d", "w"]
    },
    {
      "before": ["<C-p>"],
      // <leader><leader> / <char>... <CR>
      "after": ["leader", "leader", "/"]
    },
    {
      //
    }
  ],
  "vim.easymotionKeys": "abcdefghijklmnopqrstuvwxyz",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "\\",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.foldfix": true,
  // yankをクリップボードに
  "vim.useSystemClipboard": false,
  // 補完
  "editor.detectIndentation": false, // editor.tabSizeを開いてるファイルに合わせる
  "editor.quickSuggestions": {
    // 補完候補を出す場所
    "other": true,
    "strings": true,
    "comments": true
  }, // ペーストしたテキストをフォーマットする
  // インデントをスペースにする
  "editor.insertSpaces": true,
  // 閉じタグを自動で編集する
  "editor.linkedEditing": true,
  // 対応するカッコを強調する
  "editor.matchBrackets": "always",
  // ファイルを削除するときに確認する
  "explorer.confirmDelete": false,
  // ファイルを移動するときに確認する
  "explorer.confirmDragAndDrop": false,
  // フォルダ階層をまとめる
  "explorer.compactFolders": false,
  // 末尾に改行を自動で入れる
  "files.insertFinalNewline": false,
  // 末尾の改行を削除する
  "files.trimFinalNewlines": true,
  // 末尾の空白を削除する
  "files.trimTrailingWhitespace": true,
  // ターミナルのカーソルの種類
  "terminal.integrated.cursorStyle": "line",
  // グリフマージンを表示する
  "editor.glyphMargin": false,
  // エディタのカーソル
  "editor.cursorStyle": "line",
  // 行数の表示
  "editor.lineNumbers": "off",
  // 文字の折り返し
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?",
  // タブサイズ
  "editor.tabSize": 2,
  // 対応してない拡張子の言語を指定
  "files.associations": {
    "*.gs": "javascript"
  },
  // サジェストのどの位置から選択するか。
  "editor.suggestSelection": "first",
  // ユーザースニペットを上に持ってくる
  "editor.snippetSuggestions": "top",
  // Tabでスニペットを挿入するかどうか
  "editor.tabCompletion": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoGuessEncoding": true,
  "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",
  "editor.inlineSuggest.enabled": true,
  "workbench.startupEditor": "none",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  // "workbench.editor.tabSizing": "shrink",
  "workbench.editor.titleScrollbarSizing": "large",
  // ファイルのプレビュー
  "workbench.editor.enablePreviewFromQuickOpen": true,
  // memo: 将来デフォルトでtrueになる
  "git.mergeEditor": true,
  "git.ignoreRebaseWarning": true, // rebaseの警告を表示しない
  "editor.folding": true, // 折りたたみ
  "window.title": "${folderName} - ${activeEditorMedium}${separator}",
  "notebook.lineNumbers": "on",
  "typescript.referencesCodeLens.enabled": true,
  "editor.stickyScroll.enabled": false,
  "terminal.integrated.smoothScrolling": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "editor.stickyScroll.maxLineCount": 5,
  "window.commandCenter": true,
  // "workbench.activityBar.visible": false
  "formatOnSave": true,
  "[markdown]": {
    "formatOnSave": false
  },
  "workbench.editor.showTabs": "multiple",
  "redhat.telemetry.enabled": true,
  "console-ninja.featureSet": "Community",
  "terminal.integrated.env.osx": {},
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true,
    "json": true,
    "jsonc": true
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "cSpell.userWords": [
    "AFEELA",
    "codegen",
    "debouncer",
    "Hasura",
    "hoge",
    "openapi",
    "pathpida",
    "remeda",
    "Shmob",
    "signout",
    "stylelint",
    "tolgee",
    "topbar"
  ],
  "window.titleBarStyle": "custom",
  "gotoNextPreviousMember.symbolKinds": ["function", "strings", "constant"],
  "terminal.integrated.scrollback": 10000,
  "prisma.showPrismaDataPlatformNotification": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "git.enableCommitSigning": true,
  "liveshare.accessibility.soundVolume": 0,
  "liveshare.accessibility.voiceVolume": 0,
  "editor.accessibilitySupport": "off",
  "workbench.editor.customLabels.patterns": {
    "**/index.*": "${dirname} .../${dirname(1)}",
    "**/{page,actions,hooks,components,utils,types,functions}.{js,ts,jsx,tsx}": "${dirname}/${filename}.${extname} .../${dirname(1)}"
  },
  "find-it-faster.general.useTerminalInEditor": true,
  "javascript.preferences.useAliasesForRenames": false,
  "typescript.preferences.useAliasesForRenames": false,
  "editor.minimap.enabled": false,
  "cursor.cpp.enablePartialAccepts": true,
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "githubPullRequests.pullBranch": "never",
  "hediet.vscode-drawio.resizeImages": null,
  "cursor.composer.shouldAllowCustomModes": true,
  "go.toolsManagement.autoUpdate": true,
  "update.releaseTrack": "prerelease",
  "haskell.manageHLS": "PATH",
  "cursor.general.enableShadowWorkspace": true,
  "cSpell.enabledNotifications": {
    "Average Word Length too Long": false,
    "Lines too Long": false,
    "Maximum Word Length Exceeded": false
  },
  "git-worktree-manager.worktreeCopyPatterns": [
    "**/.env",
    "**/.env.*",
    ".vscode/**",
    "**/*.local"
  ],
  "github.copilot.nextEditSuggestions.enabled": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "workbench.statusBar.visible": false,
  "gitlens.ai.model": "gitkraken",
  "gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash"
}
